<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <PackageId>Daml.Ledger.Client.Reactive</PackageId>
    <RootNamespace>Daml.Ledger.Client.Reactive</RootNamespace>
    <PackageTags>.net C# daml ledger Rx.Net api</PackageTags>
    <Product>net reactive bindings</Product>
    <Authors>Georg Schneider</Authors>
    <Company>Digital Asset</Company>
    <AssemblyVersion>$(Version)</AssemblyVersion>
    <FileVersion>$(Version)</FileVersion>
    <Configuration>Release</Configuration>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <PackagePath>$(ProjectDir)..\..\packages\</PackagePath>
    <PackageFile>$(PackageId).$(Version).nupkg</PackageFile>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="System.Reactive" Version="4.1.5" />
    <PackageReference Include="log4net" Version="2.0.8" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\Daml.Ledger.Api.Data\Daml.Ledger.Api.Data.csproj" />
    <ProjectReference Include="..\Daml.Ledger.Client\Daml.Ledger.Client.csproj" />
  </ItemGroup>

  <Choose>
    <When Condition="'$(Configuration)' == 'Release'">
      <ItemGroup>
        <PackageReference Include="Daml.Ledger.Client" Version="$(Version)" />
      </ItemGroup>
    </When>
    <Otherwise>
      <ItemGroup>
        <ProjectReference Include="..\Daml.Ledger.Client\Daml.Ledger.Client.csproj" />
      </ItemGroup>
    </Otherwise>
  </Choose>

  <Target Name="PostBuild" AfterTargets="Pack" Outputs="$(PackagePath)$(PackageFile)">
    <Copy SourceFiles="$(OutputPath)..\$(PackageFile)" DestinationFolder="$(PackagePath)" />
  </Target>
  
  <Target Name="AfterClean" Condition="Exists($(PackagePath)$(PackageFile))" Inputs="$(PackagePath)$(PackageFile)" Outputs="$(PackagePath)$(PackageFile)">
    <Delete Files="$(PackagePath)$(PackageFile)" Importance="High" ContinueOnError="true" />
  </Target>

</Project>
