<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <PackageId>Daml.Ledger.Automation</PackageId>
    <RootNamespace>Daml.Ledger.Automation</RootNamespace>
    <PackageTags>.NET DAML Ledger Automation</PackageTags>
    <Product>.NET DAML Ledger Automation</Product>
    <Authors>Georg Schneider</Authors>
    <Company>Digital Asset</Company>
    <AssemblyVersion>$(Version)</AssemblyVersion>
    <FileVersion>$(Version)</FileVersion>
    <Configuration>Release</Configuration>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <PackagePath>$(ProjectDir)..\..\packages\</PackagePath>
    <PackageFile>$(PackageId).$(Version).nupkg</PackageFile>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="log4net" Version="2.0.8" />
  </ItemGroup>

  <Target Name="PostBuild" AfterTargets="Pack" Outputs="$(PackagePath)$(PackageFile)">
    <Copy SourceFiles="$(OutputPath)..\$(PackageFile)" DestinationFolder="$(PackagePath)" />
  </Target>

  <Target Name="AfterClean" Condition="Exists($(PackagePath)$(PackageFile))" Inputs="$(PackagePath)$(PackageFile)" Outputs="$(PackagePath)$(PackageFile)">
    <Delete Files="$(PackagePath)$(PackageFile)" Importance="High" ContinueOnError="true" />
  </Target>

  <ItemGroup>
    <ProjectReference Include="..\Daml.Ledger.Api.Data\Daml.Ledger.Api.Data.csproj" />
    <ProjectReference Include="..\Daml.Ledger.Client.Reactive\Daml.Ledger.Client.Reactive.csproj" />
  </ItemGroup>

</Project>

